<h3><%= 'přihlašovací stránka' %></h3>
<fieldset>
	<legend class='legend'><%= 'přihlášení' %></legend>
		<% form_for :user, :url => {:action =>'authenticate'} do |f| -%>
			<p><%="uživatelské jméno"%>:<br /><%= f.text_field :username, :size => 30 %></p>
			<p><%="heslo"%>:<br /><%= f.password_field :password, :size => 30 %></p>
			<%= submit_tag 'přihlásit se' %>
		<%end%>
</fieldset>
